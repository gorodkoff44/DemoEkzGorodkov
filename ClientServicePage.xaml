<Page x:Class="DemoEkzGorodkov.ClientServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEkzGorodkov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientServicePage">

    <Grid>
        <StackPanel>
            <TextBlock Text="ФИО клиента" />
            <ComboBox x:Name="ComboClient"  SelectedItem="{Binding FirstName}" DisplayMemberPath="FirstName" />
            <TextBox x:Name="id" Text="{Binding ID}" />
            <Button x:Name="Ref" Click="Ref_Click" Content="Обновить" />
        </StackPanel>
    </Grid>
</Page>
