<Page x:Class="DemoEkzGorodkov.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEkzGorodkov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="ClientList" Background="#e1e4ff" Content="Список клиентов" Grid.Column="1" Grid.Row="2" Click="ClientList_Click" />
        <Button x:Name="ServiceList" Background="#e1e4ff" Content="Список услуг" Grid.Column="1" Grid.Row="3" Click="ServiceList_Click" />
        <Button x:Name="enroll" Background="#e1e4ff" Content="Записаться на услугу" Grid.Column="1" Grid.Row="4" Click="enroll_Click" />
        <Label Content="Cалон 'Бархатные бровки'" Grid.Row="0" Grid.ColumnSpan="3" FontSize="50" HorizontalAlignment="Center" />
    </Grid>
</Page>
